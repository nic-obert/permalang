    "version": "0.2.0",
    "configurations": [

        {
            "name": "Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/pcc",
            "args": ["impl/script.pf"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
          },

          {
            "name": "Debug Compile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/pcc",
            "args": [
              "impl/script.pf",
              "-v"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
          },

          {
            "name": "Debug Execute",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/pcc",
            "args": [
              "impl/script.pf.pfx",
              "-x"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
          },

          {
            "name": "Debug Memtest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/memtest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
          }

    ]
}